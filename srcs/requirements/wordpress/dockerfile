# Usa Ubuntu como imagen base
FROM ubuntu:latest

# Actualiza el sistema e instala dependencias necesarias
RUN apt-get update && apt-get install -y \
    nginx \
    php-fpm \
    php-mysql \
    mysql-client \
    curl \
    unzip \
    sudo \
    && rm -rf /var/lib/apt/lists/*

# Instala WP-CLI
RUN curl -O https://raw.githubusercontent.com/wp-cli/builds/gh-pages/phar/wp-cli.phar \
    && chmod +x wp-cli.phar \
    && mv wp-cli.phar /usr/local/bin/wp

# Configura Nginx
COPY nginx.conf /etc/nginx/nginx.conf

# Configura PHP
COPY php.ini /etc/php/7.4/fpm/php.ini

# Descarga e instala WordPress
RUN curl -O https://wordpress.org/latest.zip \
    && unzip latest.zip -d /var/www/html \
    && rm latest.zip \
    && chown -R www-data:www-data /var/www/html/wordpress \
    && mv /var/www/html/wordpress/* /var/www/html/ \
    && rmdir /var/www/html/wordpress

# Copia el script de configuraci√≥n
COPY ./config/setup-wp.sh /setup-wp.sh
RUN chmod +x /setup-wp.sh

# Expone el puerto 80
EXPOSE 80

# Inicia Nginx y PHP-FPM
CMD service php7.4-fpm start && nginx -g 'daemon off;' & /setup-wp.sh
